<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mqm_user.admin_helper" class="MQM\UserBundle\Admin\UserAdminHelper" public="true">
            <argument type="service" id="fos_user.user_manager"/>
            <argument type="service" id="security.encoder_factory" />
        </service>

        <service id="sonata.admin.user" class="MQM\UserBundle\Admin\UserAdmin" public="true">
            <tag name="sonata.admin" manager_type="orm" group="Users" label="Users"/>
            <argument/>
            <argument>MQM\UserBundle\Entity\User</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <call method="setTranslationDomain">
                <argument>MQMUserBundle</argument>
            </call>
        </service>
    </services>

</container>
